<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<StackPane fx:controller="com.comp2042.GuiController"
           xmlns:fx="http://javafx.com/fxml"
           styleClass="root">

    <Group>
        <Pane prefWidth="600" prefHeight="700">

            <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="140" layoutY="50">
                <center>
                    <Pane fx:id="gameZone">
                        <GridPane fx:id="gamePanel"/>
                        <GridPane fx:id="brickPanel"/>
                    </Pane>
                </center>
            </BorderPane>

            <Label fx:id="scoreLabel" text="Score: 0" layoutX="430" layoutY="60" style="-fx-font-size: 18px; -fx-text-fill: white;" />
            <Label fx:id="levelLabel" text="Level: 1" layoutX="430" layoutY="90" style="-fx-font-size: 18px; -fx-text-fill: white;" />
            <Label fx:id="linesLabel" text="Lines: 0" layoutX="430" layoutY="120" style="-fx-font-size: 18px; -fx-text-fill: white;" />
            <Label text="Next:" layoutX="430" layoutY="180" style="-fx-font-size: 18px; -fx-text-fill: white;" />

            <GridPane fx:id="nextPiecePanel" layoutX="430" layoutY="210" hgap="1" vgap="1"/>

            <Group fx:id="groupNotification" layoutX="170" layoutY="300">
                <VBox alignment="CENTER">
                    <GameOverPanel fx:id="gameOverPanel"/>
                </VBox>
            </Group>
        </Pane>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>