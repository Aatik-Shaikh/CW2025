<?xml version="1.0" encoding="UTF-8"?>

<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>

<StackPane fx:controller="com.comp2042.controller.GuiController"
           xmlns:fx="http://javafx.com/fxml"
           styleClass="game-background">

    <Group>
        <Pane prefWidth="600" prefHeight="700">

            <VBox layoutX="10" layoutY="210" spacing="30" alignment="TOP_CENTER" prefWidth="160">
                <VBox alignment="CENTER" spacing="-5">
                    <Label text="SCORE:" styleClass="hud-header"/>
                    <Label fx:id="scoreLabel" text="0" styleClass="hud-value"/>
                </VBox>

                <VBox alignment="CENTER" spacing="-5">
                    <Label text="LINES:" styleClass="hud-header"/>
                    <Label fx:id="linesLabel" text="0" styleClass="hud-value"/>
                </VBox>

                <VBox styleClass="next-piece-box" spacing="5">
                    <VBox alignment="CENTER" spacing="-8">
                        <Label text="HOLD" styleClass="hud-header" style="-fx-font-size: 18px;"/>
                        <Label text="PIECE" styleClass="hud-header" style="-fx-font-size: 18px;"/>
                    </VBox>
                    <VBox fx:id="holdPiecePanel" alignment="CENTER" style="-fx-padding: 0;"/>
                </VBox>
            </VBox>

            <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="165" layoutY="110">
                <center>
                    <Pane fx:id="gameZone">
                        <GridPane fx:id="gamePanel"/>
                        <GridPane fx:id="ghostPanel"/>
                        <GridPane fx:id="brickPanel"/>
                    </Pane>
                </center>
            </BorderPane>

            <VBox layoutX="430" layoutY="110" spacing="10" alignment="TOP_CENTER" prefWidth="160">

                <VBox alignment="CENTER" spacing="-5">
                    <Label text="TIME:" styleClass="hud-header"/>
                    <Label fx:id="timeLabel" text="00:00" styleClass="hud-value"/>
                </VBox>

                <VBox alignment="CENTER" spacing="-5">
                    <Label text="LEVEL:" styleClass="hud-header"/>
                    <Label fx:id="levelLabel" text="1" styleClass="hud-value"/>
                </VBox>

                <VBox styleClass="next-piece-box" spacing="5">
                    <VBox alignment="CENTER" spacing="-8">
                        <Label text="NEXT" styleClass="hud-header" style="-fx-font-size: 18px;"/>
                        <Label text="PIECE" styleClass="hud-header" style="-fx-font-size: 18px;"/>
                    </VBox>
                    <VBox fx:id="nextPiecePanel" alignment="CENTER" style="-fx-padding: 0;"/>
                </VBox>

            </VBox>

        </Pane>
    </Group>

    <GameOverPanel fx:id="gameOverPanel" visible="false"/>

    <VBox fx:id="pauseMenu" alignment="CENTER" spacing="20" visible="false" maxWidth="350" maxHeight="400" styleClass="pause-menu">
        <Label text="PAUSED" styleClass="scoreClass" style="-fx-font-size: 60px; -fx-text-fill: white;"/>
        <Button text="RESUME" onAction="#resumeGame" focusTraversable="false" styleClass="play-button" style="-fx-font-size: 30px; -fx-min-width: 200px; -fx-min-height: 60px;"/>
        <Button text="MAIN MENU" onAction="#returnToMenu" focusTraversable="false" styleClass="menu-button" style="-fx-font-size: 30px; -fx-min-width: 200px; -fx-min-height: 60px;"/>
        <Button text="QUIT" onAction="#exitGame" focusTraversable="false" styleClass="quit-button" style="-fx-font-size: 30px; -fx-min-width: 200px; -fx-min-height: 60px;"/>
    </VBox>

    <Label fx:id="countdownLabel" text="" visible="false" styleClass="countdown-label"/>

    <Button text="âš™" onAction="#onPauseClicked" focusTraversable="false" styleClass="cog-button"
            StackPane.alignment="BOTTOM_LEFT">
        <StackPane.margin>
            <Insets bottom="20" left="20"/>
        </StackPane.margin>
    </Button>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>